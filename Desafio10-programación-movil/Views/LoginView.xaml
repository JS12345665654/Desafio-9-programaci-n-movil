<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Desafio10_programación_movil.Views.LoginView"
             Title="LoginView"
             NavigationPage.HasNavigationBar="False">
    <Grid RowDefinitions=".3*,.7*">
        <Image Aspect="AspectFill" Source="food.png"/>
        <Grid BackgroundColor="#4F3F98" Opacity=".9"/>
        <Grid ColumnDefinitions="*,*">
            <Image
                Aspect="AspectFit"
                HeightRequest="120"
                Source="applogo.png"/>
        </Grid> 
        <Grid Grid.Row="1">
            <RoundRectangle 
                Margin="-5,-30,-5,-2"
                CornerRadius="30,30,0,0"
                Fill="White"/>
            <VerticalStackLayout Margin="30,0,30,0">
                <Label
                    FontAttributes="Bold"
                    FontFamily="bold"
                    FontSize="Medium"
                    Text="Welcome!"
                    TextColor="#2D2D2D"/>
                <Label
                    FontFamily="medium"
                    Text="Log In to continue"
                    TextColor="#A3A3A4"/>
                <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle 
                        BackgroundColor="#EDEBF6"
                        CornerRadius="10"
                        HeightRequest="60"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="60"/>
                    <Image HorizontalOptions="Center" Aspect="AspectFit">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="AwesomeSolid"
                                Glyph="&#xf0e0;"
                                Size="44"
                                Color="#4F3F9b"/>
                        </Image.Source>
                    </Image>
                    <Entry
                        Grid.Column="1"
                        Placeholder="Correo"
                        Text="Ingrese su correo"
                        VerticalOptions="Center"/>
                </Grid>
                <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle 
                        BackgroundColor="#EDEBF6"
                        CornerRadius="10"
                        HeightRequest="60"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="60"/>
                    <Image HorizontalOptions="Center" Aspect="AspectFit">
                        <Image.Source>
                            <FontImageSource
                           FontFamily="AwesomeSolid"
                           Glyph="&#xf084;"
                           Size="44"
                           Color="#4F3F9b"/>
                        </Image.Source>
                    </Image>
                    <Entry
                        Grid.Column="1"
                        Placeholder="Password"
                        Text="Ingrese su contraseña"
                        IsPassword="True"
                        VerticalOptions="Center"/>
                </Grid>
                   <Button
                    Margin="0,20,0,0"
                    BackgroundColor="#4F3F9B"
                    HeightRequest="60"
                    Text="Login"
                    TextColor="#FBF6FD"/>
                   <Label
                    Margin="0,20,0,-10"
                    HorizontalOptions="Center"
                    Text="Forgot your password?"
                    TextColor="Blue"
                    TextDecorations="Underline"/>
                <Button
                  x:Name="btn_CreateAccount"
                  Clicked="btn_CreateAccount_Clicked"
                  Margin="0,30,0,0"
                  BackgroundColor="#FBF6FD"
                  HeightRequest="60"
                  Text="Create your account"
                  TextColor="#4F3F9B"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>